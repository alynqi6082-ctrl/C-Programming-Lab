#include <stdio.h>

void calculate(int a, int b, int *sum, float *avg) {
    *sum = a + b;
    *avg = (float)(*sum) / 2;
}

int main() {
    int num1 = 15, num2 = 25, sum;
    float avg;

    calculate(num1, num2, &sum, &avg);
    printf("Sum = %d\n", sum);
    printf("Average = %.2f\n", avg);

    return 0;
}

