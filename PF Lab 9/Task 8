#include <stdio.h>

int main() {
    int a = 42;
    float b = 3.14;
    char c = 'Z';

    void *ptr;

    ptr = &a;
    printf("Integer value: %d\n", *(int *)ptr);

    ptr = &b;
    printf("Float value: %.2f\n", *(float *)ptr);

    ptr = &c;
    printf("Character value: %c\n", *(char *)ptr);

    return 0;
}

