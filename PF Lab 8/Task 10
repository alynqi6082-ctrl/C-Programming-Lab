#include <stdio.h>
int main() {
    int n;
    printf("Enter number of rows: ");
    scanf("%d", &n);

    for (int i = 0; i < n; i++) {
        int value = 1;

        for (int s = 1; s <= n - i; s++)
            printf("  ");

        for (int j = 0; j <= i; j++) {
            printf("%4d", value);
            value = value * (i - j) / (j + 1);
        }

        printf("\n");
    }

    return 0;
}

