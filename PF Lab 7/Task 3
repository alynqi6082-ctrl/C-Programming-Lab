#include <stdio.h>
#include <string.h>

int main() {
    char str[100], ch;
    int i, count = 0;

    printf("Enter String: ");
    fgets(str, sizeof(str), stdin);
    str[strcspn(str, "\n")] = '\0'; 

    printf("Enter the character you wish to search: ");
    scanf(" %c", &ch); 

    for (i = 0; i < strlen(str); i++) {
        if (str[i] == ch) {
            count++;
        }
    }

    if (count > 0)
        printf("The character '%c' appears %d times in the string.\n", ch, count);
    else
        printf("The character '%c' is not in the string.\n", ch);

    return 0;
}


