#include<stdio.h>
#include<string.h>
int main(){
	char word[100];
	char ch;
	char *ptr;
	
	printf("Enter a word: ");
	scanf("%s",&word);
	
	printf("Enter the character to search for: ");
	scanf(" %c",&ch);
	
	ptr=strchr(word,ch);
	
	if(ptr!=NULL){
		int position =ptr-word+1;
		printf("The letter %c found at position: %d",ch,position);
	}
	else{
		printf("Character %c was not found",ch);
	}
	return 0;
}
