#include <stdio.h>

int main() {
    char ch, choice;
    int vCount = 0, cCount = 0;

    do {
        printf("Enter a character: ");
        scanf(" %c", &ch);

        if (ch >= 'a' && ch <= 'z') {
            if (ch == 'a' || ch == 'e' || ch == 'i' || ch == 'o' || ch == 'u') {
                vCount++;
                printf("%c is a Vowel.\n", ch);
            } else {
                cCount++;
                printf("%c is a Consonant.\n", ch);
            }
        } else {
            printf("Not an alphabet character.\n");
        }

        printf("Do you want to continue? (y for yes / n for no): ");
        scanf(" %c", &choice);
    } while (choice == 'y' || choice == 'Y');

    printf("\nTotal Vowels: %d\n", vCount);
    printf("Total Consonants: %d\n", cCount);

    return 0;
}

